
<div class=" text-center">
  <h1 class="text-2xl">Articles</h1>
</div>

<div class="flex justify-center space-x-2">
  <% @articles.each do |article| %>
    <div class="bg-slate-300 p-3 rounded-md shadow-md hover:scale-105 transition duration-75 delay-75">
      <p class="text-2xl"><%= article.title %></p>
      <p class="text-lg"><%= article.body%></p>
      <p class="text-sm w-fit bg-slate-500 rounded-md p-1 mt-2 border-slate-500 border-2">
        <%= link_to "View", article %>
      </p>
    </div>
  <% end %>
</div>
